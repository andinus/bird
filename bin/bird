#!perl6

use Bird;
use Sparrow6::DSL;
use Bird::DSL::File;
use Bird::DSL::Directory;

sub MAIN (

  Bool :$verbose = False, 
  Str  :$host,
  Str  :$user,
  Str  :$password,

)

{
  my @hosts;

  if $host {
    log("read host from command line", $host);
    @hosts = $host;
  } elsif "hosts.pl6".IO ~~ :f {
    log("read hosts file from", "hosts.pl6");
    @hosts = EVALFILE "hosts.pl6";
  } else {
      die "need host(s)"
  }

  log("cmd file", cmd-file());
  log("check file", state-file());

  EVALFILE "rules.pl6";

  task-run "check my hosts", "ssh-bulk-check", %(
    cmd => cmd-file(),
    state => state-file(),
    hosts => @hosts,
    user => $user,
    password => $password,
  );

}
